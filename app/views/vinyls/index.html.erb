<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Vinyls</h1>

  <%= form_tag import_vinyls_path, multipart: true, class: 'form-inline' do %>

    <div class="form-group">
      <%= link_to "Export CSV", vinyls_path(format: :csv), class: 'btn btn-primary' %>
    </div>

    <div class="form-group">
      <%= file_field_tag :file, class: '' %>
    </div>

    <div class="form-group">
      <%= submit_tag "Import CSV", class: 'btn btn-info' %>
    </div>

  <% end %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Catalog</th>
        <th>Artist</th>
        <th>Title</th>
        <th>Label</th>
        <th>Format</th>
        <th>Rating</th>
        <th>Released</th>
        <th>Release</th>
        <th>Notes</th>
        <th>Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @vinyls.each do |vinyl| %>
        <tr>
          <td><%= vinyl.catalog %></td>
          <td><%= vinyl.artist %></td>
          <td><%= vinyl.title %></td>
          <td><%= vinyl.label %></td>
          <td><%= vinyl.format %></td>
          <td><%= vinyl.rating %></td>
          <td><%= vinyl.released %></td>
          <td><%= vinyl.release_id %></td>
          <td><%= vinyl.notes %></td>
          <td><%= vinyl.date %></td>
          <td><%= link_to 'Show', vinyl %></td>
          <td><%= link_to 'Edit', edit_vinyl_path(vinyl) %></td>
          <td><%= link_to 'Destroy', vinyl, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Vinyl', new_vinyl_path, class:"btn btn-primary" %>

</div>
